generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  image       String
  author      String
  status      String
  categories  String[]
  cryptoSymbol String
  // createdAt   DateTime @default(now())
  // updatedAt   DateTime @updatedAt
}


model User {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  firstName         String
  lastName          String
  email             String   @unique
  password          String
  walletAddress     String
  smartWalletAddress String
  encryptedPrivateKey String
  user_type         String
  user_country      String
  emailPending      Boolean  @default(false)

  @@map("users") // Map to the 'users' collection in MongoDB
}
